		// TODO Auto-generated method stub
		return false;
	}

	private boolean verificarColisionDiagonalSuperiorDerecha(int fila, int columna, Entidad entidad) {
		// TODO Auto-generated method stub
		return false;
	}

	private boolean verificarColisionAbajo(int fila, Entidad entidad) {
		// TODO Auto-generated method stub
		return false;
