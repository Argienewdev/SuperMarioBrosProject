package fabricas;

public class FabricaSpritesModoOriginal extends FabricaSprites {

	public FabricaSpritesModoOriginal(String rutaACarpeta) {
		super(rutaACarpeta);
	}
	
	public Sprite getSilueta(int numNivel) {
		return new Sprite(rutaACarpeta + "/FabricaSpritesModoOriginal/fondo-" + numNivel + ".png");
	}
	
	public Sprite getMario() {
		return new Sprite(rutaACarpeta + "/FabricaSpritesModoOriginal/mario.png");
	}
	
	public Sprite getLadrillo() {
		return new Sprite(rutaACarpeta + "/FabricaSpritesModoOriginal/ladrillo.png");
	}

	public Sprite getSpiny() {
		return new Sprite(rutaACarpeta + "/FabricaSpritesModoOriginal/spiny.png");
	}

	public Sprite getPiranhaPlant() {
		return new Sprite(rutaACarpeta + "/FabricaSpritesModoOriginal/piranhaplant.png");
	}

	public Sprite getLakitu() {
		return new Sprite(rutaACarpeta + "/FabricaSpritesModoOriginal/lakitu.png");
	}

	public Sprite getBuzzyBeetle() {
		return new Sprite(rutaACarpeta + "/FabricaSpritesModoOriginal/buzzybeetle.png");
	}

	public Sprite getGoomba() {
		return new Sprite(rutaACarpeta + "/FabricaSpritesModoOriginal/goomba.png");
	}

	public Sprite getBowser() {
		return new Sprite(rutaACarpeta + "/FabricaSpritesModoOriginal/bowser.png");
	}

	public Sprite getEstrella() {
		return new Sprite(rutaACarpeta + "/FabricaSpritesModoOriginal/estrella.png");
	}
	
	public Sprite getChampinionVerde() {
		return new Sprite(rutaACarpeta + "/FabricaSpritesModoOriginal/champinionverde.png");
	}

	public Sprite getFlorDeFuego() {
		return new Sprite(rutaACarpeta + "/FabricaSpritesModoOriginal/flordefuego.png");
	}

	public Sprite getSuperChampinion() {
		return new Sprite(rutaACarpeta + "/FabricaSpritesModoOriginal/superchampinion.png");
	}

	public Sprite getMonedas() {
		return new Sprite(rutaACarpeta + "/FabricaSpritesModoOriginal/monedas.png");
	}
	
}
